@model ICollection<Microsoft.Web.WebPages.OAuth.AuthenticationClientData>

@using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "well form-inline" }))
{
    @Html.AntiForgeryToken()
    <fieldset id="socialLoginList">
        <legend>Log in using another service</legend>
        <div class="form-actions">
            @foreach (Microsoft.Web.WebPages.OAuth.AuthenticationClientData p in Model)
            {                
                <input type="submit" name="provider" class="btn btn-info btn-large"   
                       value="@p.AuthenticationClient.ProviderName"  title="Log in using your @p.DisplayName account" />
            }
        </div>
    </fieldset>
}

