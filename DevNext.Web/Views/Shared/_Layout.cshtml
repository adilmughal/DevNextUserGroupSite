<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width">
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700"/>
    @Styles.Render("~/Content/ThirdPartyStyleSheets")
    @*@Styles.Render("~/Content/bootstrap")*@
    @Styles.Render("~/Content/sitecss")
    
    @Scripts.Render("~/Scripts/modernizr")
</head>
<body>
    <header>
        @Html.Partial("_Header")
    </header>
    <div id="body">
        <div class="container">
            @RenderBody()
            <hr />
        </div>
    </div>
    <footer>
        @Html.Partial("_Footer")
    </footer>

    @Scripts.Render("~/Scripts/ThirdPartyScripts")
    @Scripts.Render("~/Scripts/site")

    @RenderSection("scripts", required: false)
</body>
</html>
